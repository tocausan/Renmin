extends ../layout/row

block content
    span(class='small-12 columns')
        h1(class='text-center') #{title}

        div(class='small-12 columns')
            div(class='small-6 medium-4 large-2 columns')
                a(class='button tiny secondary postfix', href='/user') Back

            div(class='small-6 medium-4 large-2 columns text-right')
                a(class='button tiny info postfix', href='/user/edit/id/#{user._id}') Edit

        table(class='small-12 columns')
            tr
                td Email
                td #{user.email}
            tr
                td Username
                td #{user.username}
            tr
                td Firstname
                td #{user.firstname}
            tr
                td Lastname
                td #{user.lastname}
            tr
                td status
                td #{user.status}
            tr
                td Confirmed
                td #{user.confirmed}

