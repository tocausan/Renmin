extends ../layout/row

block content
    span(class='small-12 medium-6 medium-offset-3 columns')
        h1(class='text-center') #{title}

        div(class='small-12 columns')
            div(class='small-6 columns')
                a(class='button tiny secondary postfix' href='/profile') Back

        form(class='small-12 columns' action='/profile/edit' method='post' enctype='application/x-www-form-urlencoded')
            input(type='hidden' value='PUT' name='_method')

            div(class='small-12 columns')
                div(class='small-4 columns')
                    label(for='email') Email
                div(class='small-8 columns')
                    input(type='email' value='#{user.email}' name='email')

            div(class='small-12 columns')
                div(class='small-4 columns')
                    label(for='username') Username
                div(class='small-8 columns')
                    input(type='text' value='#{user.username}' name='username')

            div(class='small-12 columns')
                div(class='small-4 columns')
                    label(for='username') Firstname
                div(class='small-8 columns')
                    input(type='text' value='#{user.firstname}' name='firstname')

            div(class='small-12 columns')
                div(class='small-4 columns')
                    label(for='username') Lastname
                div(class='small-8 columns')
                    input(type='text' value='#{user.lastname}' name='lastname')

            div(class='small-12 columns')
                button(type='submit' class='button tiny success right postfix').
                    Update

        hr

        div(class='small-12 columns')
            div(class='small-12 columns')
                a(class='button tiny info postfix' href='/profile/edit-avatar') Edit avatar
            div(class='small-12 columns')
                a(class='button tiny info postfix' href='/profile/edit-password') Edit password

            hr
            div(class='small-12 columns')
                form(class='' action='/profile/edit' method='post' enctype='application/x-www-form-urlencoded')
                    input(type='hidden' value='DELETE' name='_method')
                    button(type='submit' class='small-12 columns button tiny alert postfix').
                        Delete


