extends ../layout/row

block content
    span(class='small-12 columns')
        h1(class='text-center') #{title}

        div(class='small-12 columns')
            div(class='small-6 medium-4 large-2 columns')
                a(class='button tiny secondary postfix' href='/post/homepage') Back

        form(class='small-12 medium-6 medium-offset-3 columns left' action='/post/homepage/edit-image/id/#{post._id}' method='post' enctype='multipart/form-data')

                div(class='small-12 columns')
                    input(class='button tiny secondary right postfix', type="file", name="image")

                div(class='small-12 columns hidden-for-small-up')
                    label(for='style') Text
                    textarea(name='style' rows='10')

                div(class='small-12 columns')
                    button(type='submit', class='button tiny success right postfix').
                        Upload
