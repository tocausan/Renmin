extends ../layout/row

block content
    span(class='small-12 columns')
        h1(class='text-center') #{title}

        div(class='small-12 columns')
            div(class='small-6 medium-4 large-2 columns')
                a(class='button tiny secondary postfix', href='/post') Back

            div(class='small-6 medium-4 large-2 columns text-right')
                a(class='button tiny info postfix', href='/post/edit/id/#{post._id}') Edit

        table(class='small-12 columns')
            tr
                td Name
                td #{post.name}
            tr
                td URL name
                td #{post.url_name}
            tr
                td Description
                td #{post.description}
            tr
                td Display
                td #{post.display}
            tr
                td Created at
                td #{post.created_at}
            tr
                td Updated at
                td #{post.updated_at}

